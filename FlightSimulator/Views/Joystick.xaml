<UserControl x:Class="FlightSimulator.Views.Joystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             Height="600" Width="600">
    <TabControl HorizontalAlignment="Center">
        <TabItem Width="298" Height="30" FontWeight="Bold">
            <TabItem.Header>
                <StackPanel>
                    <TextBlock  FontSize="18" >Manual</TextBlock>
                </StackPanel>
            </TabItem.Header>
            <DockPanel Width="600">

                <Grid DockPanel.Dock="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Slider Grid.Column="1" Grid.ColumnSpan="3" Foreground="Black" DockPanel.Dock="Bottom" Minimum="-1"  Maximum="1" Value="0" TickFrequency="0.1" TickPlacement="BottomRight" />
                    <Label Grid.Row="1" Grid.Column="2" FontSize="20"  Content="⬅ Rudder ⮕" HorizontalAlignment="Center" />
                    <Label Grid.Row="1" Grid.Column="3" FontSize="20"  Content="0" HorizontalAlignment="Center" />
                </Grid>

                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="⬅ Aileron ⮕" Grid.Column="2" HorizontalAlignment="Center" FontSize="20"></Label>
                    <Label Content="{Binding Path=VM_Aileron}" Grid.Column="3"  HorizontalAlignment="Center"  FontSize="20"/>
                    <!--UpdateSourceTrigger=PropertyChanged-->
                </Grid>

                <Grid DockPanel.Dock="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Content="0" VerticalAlignment="Bottom" FontSize="20">
                        <Label.LayoutTransform>
                            <RotateTransform Angle="-90"/>
                        </Label.LayoutTransform>
                    </Label>
                    <Label  VerticalAlignment="Center" Grid.Row="1" Content="⬅ Throttle ⮕" FontSize="20">
                        <Label.LayoutTransform>
                            <RotateTransform Angle="-90"/>
                        </Label.LayoutTransform>
                    </Label>

                    <Slider Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" Foreground="Gray"  Minimum="0"  Maximum="1" 
                            Value="0" TickFrequency="0.1" TickPlacement="BottomRight" Height="290" VerticalAlignment="Center" />
                </Grid>

                <Grid DockPanel.Dock="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Label Content="⬅ Elevator ⮕" Grid.Row="1" FontSize="20" VerticalAlignment="center" HorizontalAlignment="center">
                        <Label.LayoutTransform>
                            <RotateTransform Angle="90"/>
                        </Label.LayoutTransform>
                    </Label>
                    <Label Content="0.0" Grid.Row="0" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="center">
                        <Label.LayoutTransform>
                            <RotateTransform Angle="90"/>
                        </Label.LayoutTransform>
                    </Label>
                </Grid>




                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Canvas  x:Name="Base" Margin="-12,0,12,0" Width="340" Height="340">
                        <Ellipse HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="340">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FF2C2A2A" Offset="1" />
                                    <GradientStop Color="#FF3A3737" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="170" Canvas.Left="84" Canvas.Top="84">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FF0E0E0E" Offset="1" />
                                    <GradientStop Color="#FF1D1D1D" />
                                    <GradientStop Color="#FF323030" Offset="0.453" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
